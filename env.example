# ===================================
# YodaAI Environment Configuration
# ===================================

# ===================================
# Database Configuration
# ===================================
# For local development, use SQLite
DATABASE_URL=sqlite:///./yodaai.db

# For production with Neon Cloud (PostgreSQL), replace with your Neon connection string
# Get from: https://console.neon.tech -> Your Project -> Connection Details
# Format: postgresql://user:password@host/database?sslmode=require
NEON_DATABASE_URL=

# Use local SQLite for immediate testing (set to False to use Neon)
USE_LOCAL_DB=True

# ===================================
# OpenAI Configuration (REQUIRED for AI features)
# ===================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===================================
# Gemini AI Configuration (Optional alternative)
# ===================================
# Get key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# ===================================
# Authentication & Security
# ===================================
# IMPORTANT: Change this to a random secure key in production
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================
# Firebase Configuration (Optional)
# ===================================
# For Firebase Authentication
# Get from Firebase Console -> Project Settings -> Service Accounts
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ===================================
# Email Service Configuration (For automated notifications)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yodaai.com
SMTP_FROM_NAME=YodaAI

# ===================================
# Application Settings
# ===================================
DEBUG=True
ENVIRONMENT=development
APP_URL=http://localhost:8000

# ===================================
# Feature Flags
# ===================================
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_CALENDAR_INTEGRATION=False
ENABLE_AI_ANALYSIS=True
ENABLE_AUTOMATED_REMINDERS=False

# ===================================
# AI Service Configuration
# ===================================
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500
AI_MODEL=gpt-4